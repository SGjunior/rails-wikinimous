<%= form_for @article do |f| %>
<div class="article-mod-form">
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, { class: 'form-control', autofocus: 'autofocus' }%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, { class: 'form-control', style: 'height: 300px' } %>
  </div>
    <div class="submit-section">
      <div class="left-submit-section">
          <%= f.submit 'Update', { class: 'btn btn-success float-left', style: 'width: 100px' } %>
      </div>
      <div class="right-submit-section">
          <%= link_to articles_path do %>
          <div class="btn btn-info float-right" style="width: 100px">Go back</div>
          <% end %>
      </div>
    </div>
</div>
<% end %>
